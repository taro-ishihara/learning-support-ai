{
  "name": "言語学習サポートAI",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": ["contextMenus", "activeTab", "storage"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "言語学習サポートAI"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content-css.css"],
      "js": ["content-script.js"]
    }
  ]
}
